<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="control_middle_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/control_dimen_button</item>
        <item name="android:layout_weight">.15</item>
        <item name="android:background">@drawable/button_middle</item>
    </style>

    <style name="control_outer_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/control_dimen_button</item>
        <item name="android:layout_weight">.30</item>
    </style>

</resources>